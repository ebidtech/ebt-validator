{
  "name":        "ebidtech/ebt-validator",
  "description": "A simple service that provides some common PHP validations",
  "license":     "MIT",
  "homepage":    "https://github.com/ebidtech/ebt-validator",
  "type":        "library",
  "keywords":    [],
  "require": {
    "php":                       ">=5.4.0",
    "psr/log":                   "1.0.0"
  },
  "require-dev": {
    "phpunit/phpunit":           "4.7.*",
    "nikic/php-parser":          "1.3.*",
    "squizlabs/php_codesniffer": "2.3.*"
  },
  "scripts": {
    "post-install-cmd": [
      "bash ./tools/install-codesniffer.sh"
    ]
  },
  "autoload": {
    "psr-0": {
      "": "src/"
    }
  },
  "minimum-stability": "stable"
}
